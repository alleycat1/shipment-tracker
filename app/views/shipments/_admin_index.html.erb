<div class="container" data-controller="update-shipments">
  <div class="row">
    <div class="col-12 col-xl-6">
      <div class="shipment-cards mt-4 m-0 px-0">
        <div class="mb-5">
          <h1 class="ship-title text-dark">Shipments</h1>
        </div>
        <div class="d-flex justify-content-evenly mb-3">
          <h5 class="fw-bold btn btn-tabs active-color" data-update-shipments-target="all" data-shipment="all" data-action="click->update-shipments#update">All</h5>
          <h5 class="fw-bold btn btn-tabs" data-update-shipments-target="in_transit" data-shipment="in_transit" data-action="click->update-shipments#update">Active</h5>
          <h5 class="fw-bold btn btn-tabs" data-update-shipments-target="in_preparation" data-shipment="in_preparation" data-action="click->update-shipments#update">In preparation</h5>
          <h5 class="fw-bold btn btn-tabs" data-update-shipments-target="delivered" data-shipment="delivered" data-action="click->update-shipments#update">Delivered</h5>
          <h5 class="fw-bold btn btn-tabs" data-update-shipments-target="problematic" data-shipment="problematic" data-action="click->update-shipments#update">Problem</h5>
        </div>
        <div data-update-shipments-target="list">
          <%= render "shipment_card_admin_index", shipments: shipments %>
        </div>
      </div>
    </div>
    <div class="col-12 col-xl-6 pt-3 position-sticky" style="top: 20px; height: fit-content;">
      <div class="d-flex justify-content-end mb-2" >
        <%= link_to '<button class="btn-new-shipment">New Shipment</button>'.html_safe, new_shipment_path %>
      </div>
      <div>
        <h2 class="fw-bold text-dark margin-class">Track on map</h2>
        <div class="rounded-3" style="width: 100%; height: 74vh;"
          data-controller="mapbox"
          data-mapbox-markers-value="<%= @markers.to_json %>"
          data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
</div>
