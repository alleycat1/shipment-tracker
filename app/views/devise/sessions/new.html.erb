<div class="row mt-0 justify-content-center">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "login-form__container"}) do |f| %>

       <h2 class="text-dark text-center" >Log in</h2>


          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email"} %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password"} %>

          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>


          <div class="d-flex justify-content-center">
            <%= f.button :submit, "Log in", class: "btn btn-primary text-light text login-form__button" %>
          </div>

         <br>


           <%= render "devise/shared/links" %>


      <% end %>

</div>
